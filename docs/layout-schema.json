{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dock layout configuration",
  "description": "Configuration for LayoutGenerator.",
  "type": "object",
  "properties": {
    "orientation": {
      "type": "string",
      "enum": ["Horizontal", "Vertical"],
      "description": "Orientation of the main dock"
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" }
        },
        "required": ["id", "title"]
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "alignment": {
            "type": "string",
            "enum": ["Left", "Right", "Top", "Bottom"]
          },
          "proportion": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "required": ["id", "title"]
      }
    }
  },
  "required": ["documents"]
}
