<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DockControlPanelsSample.App"
             Name="Dock Control Panels Sample"
             RequestedThemeVariant="Light">

  <Application.Resources>
    <ControlRecycling x:Key="ControlRecyclingKey" TryToUseIdAsKey="True" />
    <Color x:Key="RegionColor">Transparent</Color>
  </Application.Resources>

  <Application.Styles>

    <FluentTheme />

    <DockFluentTheme />

    <Style Selector="TextBlock">
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="DockControl">
      <Setter Property="(ControlRecyclingDataTemplate.ControlRecycling)" Value="{StaticResource ControlRecyclingKey}" />
    </Style>

    <!-- Custom styles for our samples -->

    <Style Selector="TextBlock.SampleContent">
      <Setter Property="Background" Value="LightBlue" />
      <Setter Property="Padding" Value="8" />
      <Setter Property="Margin" Value="2" />
    </Style>

    <Style Selector="TextBlock.ToolContent">
      <Setter Property="Background" Value="LightGreen" />
      <Setter Property="Padding" Value="8" />
      <Setter Property="Margin" Value="2" />
    </Style>

  </Application.Styles>

</Application>
