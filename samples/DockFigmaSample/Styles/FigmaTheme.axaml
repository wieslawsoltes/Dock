<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <FontFamily x:Key="AppFontFamily">Space Grotesk, Segoe UI</FontFamily>
    <FontFamily x:Key="MonoFontFamily">JetBrains Mono, Consolas</FontFamily>

    <Color x:Key="InkColor">#101317</Color>
    <Color x:Key="InkMutedColor">#5C6673</Color>
    <Color x:Key="CanvasBaseColor">#ECEFF3</Color>
    <Color x:Key="PanelBackgroundColor">#FFFFFF</Color>
    <Color x:Key="PanelBorderColor">#E1E6ED</Color>
    <Color x:Key="SoftPanelColor">#F4F6FA</Color>
    <Color x:Key="TopBarColor">#101317</Color>
    <Color x:Key="TopBarBorderColor">#1E2330</Color>
    <Color x:Key="StatusBarColor">#FAFBFC</Color>
    <Color x:Key="AccentColor">#3D7EFF</Color>
    <Color x:Key="AccentWarmColor">#FF8A4C</Color>
    <Color x:Key="AccentMintColor">#22C55E</Color>
    <Color x:Key="CanvasOverlayColor">#FFFFFFCC</Color>

    <SolidColorBrush x:Key="InkBrush" Color="{StaticResource InkColor}" />
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource InkMutedColor}" />
    <SolidColorBrush x:Key="CanvasBaseBrush" Color="{StaticResource CanvasBaseColor}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
    <SolidColorBrush x:Key="PanelBorderBrush" Color="{StaticResource PanelBorderColor}" />
    <SolidColorBrush x:Key="SoftPanelBrush" Color="{StaticResource SoftPanelColor}" />
    <SolidColorBrush x:Key="TopBarBrush" Color="{StaticResource TopBarColor}" />
    <SolidColorBrush x:Key="TopBarBorderBrush" Color="{StaticResource TopBarBorderColor}" />
    <SolidColorBrush x:Key="StatusBarBrush" Color="{StaticResource StatusBarColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentWarmBrush" Color="{StaticResource AccentWarmColor}" />
    <SolidColorBrush x:Key="AccentMintBrush" Color="{StaticResource AccentMintColor}" />
    <SolidColorBrush x:Key="CanvasOverlayBrush" Color="{StaticResource CanvasOverlayColor}" />

    <LinearGradientBrush x:Key="HomeHeroBrush" StartPoint="0,0" EndPoint="1,1">
      <GradientStop Color="#F7F9FC" Offset="0" />
      <GradientStop Color="#E8EEF7" Offset="0.5" />
      <GradientStop Color="#FDF1E7" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CanvasGridBrush" StartPoint="0,0" EndPoint="1,1">
      <GradientStop Color="#E7EDF5" Offset="0" />
      <GradientStop Color="#F7F9FC" Offset="1" />
    </LinearGradientBrush>
  </Styles.Resources>

  <Style Selector="Window">
    <Setter Property="Background" Value="{DynamicResource CanvasBaseBrush}" />
    <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}" />
    <Setter Property="Foreground" Value="{DynamicResource InkBrush}" />
  </Style>

  <Style Selector="TextBlock.display">
    <Setter Property="FontSize" Value="36" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{DynamicResource InkBrush}" />
  </Style>

  <Style Selector="TextBlock.subtitle">
    <Setter Property="FontSize" Value="16" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
  </Style>

  <Style Selector="TextBlock.section-title">
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBlock.subtle-title">
    <Setter Property="FontSize" Value="13" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
  </Style>

  <Style Selector="TextBlock.topbar-title">
    <Setter Property="FontSize" Value="14" />
    <Setter Property="Foreground" Value="#FFFFFF" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBlock.topbar-subtitle">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Foreground" Value="#B5BDC8" />
  </Style>

  <Style Selector="TextBlock.hero-title">
    <Setter Property="FontSize" Value="32" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{DynamicResource InkBrush}" />
  </Style>

  <Style Selector="TextBlock.hero-body">
    <Setter Property="FontSize" Value="15" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
    <Setter Property="TextWrapping" Value="Wrap" />
  </Style>

  <Style Selector="TextBlock.card-title">
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBlock.muted">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
  </Style>

  <Style Selector="TextBlock.layer-meta">
    <Setter Property="FontSize" Value="11" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
  </Style>

  <Style Selector="TextBlock.layer-tag">
    <Setter Property="FontSize" Value="10" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
  </Style>

  <Style Selector="TextBlock.layer-name">
    <Setter Property="FontSize" Value="13" />
  </Style>

  <Style Selector="TextBlock.logo">
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="TextBlock.avatar">
    <Setter Property="FontSize" Value="11" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="TextBlock.nav-item">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
  </Style>

  <Style Selector="TextBlock.button-label">
    <Setter Property="FontSize" Value="13" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBlock.chip">
    <Setter Property="FontSize" Value="11" />
    <Setter Property="Foreground" Value="{DynamicResource InkBrush}" />
  </Style>

  <Style Selector="TextBlock.chip-contrast">
    <Setter Property="FontSize" Value="11" />
    <Setter Property="Foreground" Value="#FFFFFF" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBlock.overlay-title">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBlock.inspect-metric">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
  </Style>

  <Style Selector="TextBlock.code">
    <Setter Property="FontFamily" Value="{DynamicResource MonoFontFamily}" />
    <Setter Property="FontSize" Value="11" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
  </Style>

  <Style Selector="Button.primary">
    <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
    <Setter Property="Foreground" Value="#FFFFFF" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="16,8" />
  </Style>

  <Style Selector="Button.ghost">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Padding" Value="10,6" />
  </Style>

  <Style Selector="Button.ghost-inverse">
    <Setter Property="Background" Value="#1B2029" />
    <Setter Property="Foreground" Value="#FFFFFF" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Padding" Value="10,6" />
  </Style>

  <Style Selector="Button.primary-inverse">
    <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
    <Setter Property="Foreground" Value="#FFFFFF" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="12,6" />
  </Style>

  <Style Selector="ToggleButton.mode-toggle">
    <Setter Property="Background" Value="#1B2029" />
    <Setter Property="Foreground" Value="#B7C0CC" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Padding" Value="12,6" />
  </Style>

  <Style Selector="ToggleButton.mode-toggle:checked">
    <Setter Property="Background" Value="#FFFFFF" />
    <Setter Property="Foreground" Value="{DynamicResource InkBrush}" />
  </Style>

  <Style Selector="ToggleButton.tool-button">
    <Setter Property="Background" Value="{DynamicResource SoftPanelBrush}" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

  <Style Selector="ToggleButton.tool-button:checked">
    <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="TextBlock.tool-glyph">
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBox.search">
    <Setter Property="Background" Value="#1B2029" />
    <Setter Property="Foreground" Value="#FFFFFF" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Padding" Value="10,6" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

  <Style Selector="TextBox.panel-search">
    <Setter Property="Background" Value="{DynamicResource SoftPanelBrush}" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Padding" Value="8,6" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

  <Style Selector="TextBox.field-input">
    <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Padding" Value="6,4" />
    <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

  <Style Selector="TextBlock.field-label">
    <Setter Property="FontSize" Value="11" />
    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
  </Style>

  <Style Selector="DockControl.figma-dock">
    <Setter Property="Background" Value="{DynamicResource CanvasBaseBrush}" />
  </Style>

  <Style Selector="DockControl.figma-dock TabStripItem">
    <Setter Property="Margin" Value="4,0" />
    <Setter Property="Padding" Value="10,6" />
    <Setter Property="CornerRadius" Value="10" />
  </Style>

  <Style Selector="DockControl.figma-dock TabStripItem:selected">
    <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
  </Style>

  <Style Selector="DockControl.figma-dock TabStrip">
    <Setter Property="Background" Value="{DynamicResource CanvasBaseBrush}" />
  </Style>

  <Style Selector="DockControl.figma-dock TabControl">
    <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}" />
    <Setter Property="BorderThickness" Value="0,0,0,1" />
  </Style>

  <Style Selector="UserControl">
    <Setter Property="Background" Value="{DynamicResource CanvasBaseBrush}" />
  </Style>
</Styles>
