<UserControl x:Class="DockFigmaSample.Views.Documents.DesignCanvasView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DockFigmaSample.ViewModels.Documents"
             x:DataType="vm:DesignCanvasViewModel" x:CompileBindings="True">
  <Grid Background="{DynamicResource CanvasBaseBrush}">
    <Border Background="{DynamicResource CanvasGridBrush}" Opacity="0.75" />

    <Border Width="980" Height="560"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Background="{DynamicResource ArtboardBrush}"
            CornerRadius="24"
            BoxShadow="0 30 60 0 #22000000">
      <Grid Margin="32" RowDefinitions="Auto,*" ColumnDefinitions="*,Auto" RowSpacing="24">
        <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
          <Border Width="32" Height="32" CornerRadius="10" Background="{DynamicResource AccentBrush}">
            <TextBlock Text="N" HorizontalAlignment="Center" VerticalAlignment="Center" Classes="logo" />
          </Border>
          <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="Product" Classes="nav-item" />
            <TextBlock Text="Solutions" Classes="nav-item" />
            <TextBlock Text="Pricing" Classes="nav-item" />
            <TextBlock Text="Docs" Classes="nav-item" />
          </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
          <Border Padding="8,6" CornerRadius="12" Background="{DynamicResource ChipBrush}">
            <TextBlock Text="v2.4" Classes="chip" />
          </Border>
          <Border Padding="10,6" CornerRadius="12" Background="{DynamicResource AccentWarmBrush}">
            <TextBlock Text="Start" Classes="chip-contrast" />
          </Border>
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="2*,*" ColumnSpacing="32">
          <StackPanel Spacing="16">
            <TextBlock Text="Design tools with
real-time momentum" Classes="hero-title" />
            <TextBlock Text="Build interactive flows faster with components, tokens, and smart docking." Classes="hero-body" />
            <StackPanel Orientation="Horizontal" Spacing="12">
              <Border Background="{DynamicResource AccentBrush}" CornerRadius="14" Padding="16,10">
                <TextBlock Text="Get started" Classes="button-label" />
              </Border>
              <Border Background="{DynamicResource SoftPanelBrush}" CornerRadius="14" Padding="16,10">
                <TextBlock Text="Live demo" Classes="button-label" />
              </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Border Width="8" Height="8" CornerRadius="4" Background="{DynamicResource AccentBrush}" />
              <Border Width="8" Height="8" CornerRadius="4" Background="{DynamicResource AccentWarmBrush}" />
              <Border Width="8" Height="8" CornerRadius="4" Background="{DynamicResource AccentMintBrush}" />
            </StackPanel>
          </StackPanel>

          <Border Grid.Column="1" CornerRadius="18" Background="{DynamicResource SoftPanelBrush}" Padding="20">
            <StackPanel Spacing="12">
              <TextBlock Text="Active sprint" Classes="section-title" />
              <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="12" Padding="12">
                <StackPanel Spacing="6">
                  <TextBlock Text="Landing page" Classes="card-title" />
                  <TextBlock Text="12 tasks · 4 people" Classes="muted" />
                </StackPanel>
              </Border>
              <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="12" Padding="12">
                <StackPanel Spacing="6">
                  <TextBlock Text="Prototype" Classes="card-title" />
                  <TextBlock Text="6 screens · 3 flows" Classes="muted" />
                </StackPanel>
              </Border>
              <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="12" Padding="12">
                <StackPanel Spacing="6">
                  <TextBlock Text="Design tokens" Classes="card-title" />
                  <TextBlock Text="Updated 2h ago" Classes="muted" />
                </StackPanel>
              </Border>
            </StackPanel>
          </Border>
        </Grid>
      </Grid>
    </Border>

    <Border HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="24"
            Padding="10,6"
            CornerRadius="12"
            Background="{DynamicResource CanvasOverlayBrush}">
      <TextBlock Text="{Binding FrameName}  |  {Binding FrameSize}" Classes="muted" />
    </Border>
  </Grid>
</UserControl>
