<UserControl x:Class="DockFigmaSample.Views.Documents.PrototypeCanvasView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DockFigmaSample.ViewModels.Documents"
             x:DataType="vm:PrototypeCanvasViewModel" x:CompileBindings="True">
  <Grid Background="{DynamicResource CanvasBaseBrush}">
    <Border Background="{DynamicResource CanvasGridBrush}" Opacity="0.6" />

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="24">
      <TextBlock Text="Prototype Flow" Classes="section-title" HorizontalAlignment="Center" />
      <ItemsControl ItemsSource="{Binding Frames}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Horizontal" Spacing="18" />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Padding="18,14" CornerRadius="16" Background="{DynamicResource PanelBackgroundBrush}" BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="1">
              <StackPanel Spacing="6" Width="160">
                <TextBlock Text="{Binding}" Classes="card-title" />
                <TextBlock Text="Tap to advance" Classes="muted" />
              </StackPanel>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </StackPanel>

    <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="24" Padding="10,6" CornerRadius="12" Background="{DynamicResource CanvasOverlayBrush}">
      <TextBlock Text="Prototype mode" Classes="muted" />
    </Border>
  </Grid>
</UserControl>
