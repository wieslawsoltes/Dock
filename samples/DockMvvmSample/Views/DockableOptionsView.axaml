<UserControl x:Class="DockMvvmSample.Views.DockableOptionsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dm="using:Dock.Model.Core"
             xmlns:views="using:DockMvvmSample.Views"
             x:DataType="dm:IDockable" x:CompileBindings="True">
  <Grid RowDefinitions="Auto,Auto">
    <StackPanel Orientation="Horizontal" Spacing="2">
      <CheckBox IsChecked="{Binding CanClose}" ToolTip.Tip="CanClose" />
      <CheckBox IsChecked="{Binding CanFloat}" ToolTip.Tip="CanFloat" />
      <CheckBox IsChecked="{Binding CanPin}" ToolTip.Tip="CanPin" />
      <CheckBox IsChecked="{Binding KeepPinnedDockableVisible}" ToolTip.Tip="KeepPinnedDockableVisible" />
      <CheckBox IsChecked="{Binding CanDrag}" ToolTip.Tip="CanDrag" />
      <CheckBox IsChecked="{Binding CanDrop}" ToolTip.Tip="CanDrop" />
      <CheckBox IsChecked="{Binding IsModified}" ToolTip.Tip="IsModified" />
    </StackPanel>
    <ComboBox Grid.Row="1"
              ItemsSource="{x:Static views:DockableOptionsView.PinnedDockDisplayModeOptions}"
              SelectedItem="{Binding PinnedDockDisplayModeOverride}"
              ToolTip.Tip="PinnedDockDisplayModeOverride"
              MinWidth="110">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding ., TargetNullValue=Default}" />
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>
  </Grid>
</UserControl>
