<UserControl x:Class="DockOfficeSample.Views.Documents.OfficeDocumentView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rxui="clr-namespace:ReactiveUI.Avalonia;assembly=ReactiveUI.Avalonia">
  <Grid RowDefinitions="Auto,*" Background="{DynamicResource SurfaceBrush}">
    <Border Background="{DynamicResource SurfaceElevatedBrush}"
            BorderBrush="{DynamicResource PanelBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="12,10">
      <Grid ColumnDefinitions="*,Auto">
        <StackPanel>
          <TextBlock Text="{Binding Title}" Classes="doc-title" />
          <TextBlock Text="{Binding AppKind}" Classes="doc-subtitle" />
        </StackPanel>
        <Button Grid.Column="1" Content="Share" Classes="ghost" />
      </Grid>
    </Border>

    <rxui:RoutedViewHost Grid.Row="1" Router="{Binding Router}" />
  </Grid>
</UserControl>
