<UserControl x:Class="DockOfficeSample.Views.Workspaces.ExcelWorkspaceView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DockOfficeSample.ViewModels.Workspaces"
             xmlns:docs="using:DockOfficeSample.ViewModels.Documents"
             x:DataType="vm:ExcelWorkspaceViewModel" x:CompileBindings="True">
  <Grid RowDefinitions="Auto,*,Auto">
    <Border Grid.Row="0" Background="{DynamicResource ExcelAccentBrush}" Padding="18,12">
      <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
          <Border Width="32" Height="32" CornerRadius="8" Background="{DynamicResource ExcelAccentDarkBrush}">
            <TextBlock Text="X" Classes="app-badge" />
          </Border>
          <StackPanel>
            <TextBlock Text="Excel" Classes="app-title" />
            <TextBlock Text="{Binding FileName}" Classes="app-subtitle" />
          </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
          <ToggleButton Classes="mode-toggle"
                        Content="Normal"
                        IsChecked="{Binding EditorMode, Converter={StaticResource EnumEqualsConverter}, ConverterParameter={x:Static docs:ExcelViewMode.Normal}}"
                        Command="{Binding SwitchMode}"
                        CommandParameter="{x:Static docs:ExcelViewMode.Normal}" />
          <ToggleButton Classes="mode-toggle"
                        Content="Page Layout"
                        IsChecked="{Binding EditorMode, Converter={StaticResource EnumEqualsConverter}, ConverterParameter={x:Static docs:ExcelViewMode.PageLayout}}"
                        Command="{Binding SwitchMode}"
                        CommandParameter="{x:Static docs:ExcelViewMode.PageLayout}" />
          <ToggleButton Classes="mode-toggle"
                        Content="Page Break"
                        IsChecked="{Binding EditorMode, Converter={StaticResource EnumEqualsConverter}, ConverterParameter={x:Static docs:ExcelViewMode.PageBreakPreview}}"
                        Command="{Binding SwitchMode}"
                        CommandParameter="{x:Static docs:ExcelViewMode.PageBreakPreview}" />
        </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
          <TextBlock Text="Connected" Classes="app-subtitle" />
          <Button Content="Home" Classes="ghost-light" Command="{Binding HostScreen.Router.NavigateBack}" />
        </StackPanel>
      </Grid>
    </Border>

    <DockControl Grid.Row="1" Layout="{Binding Layout}" />

    <Border Grid.Row="2" Background="{DynamicResource SurfaceElevatedBrush}" Padding="16,8" BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="0,1,0,0">
      <Grid ColumnDefinitions="*,Auto">
        <TextBlock Text="{Binding StatusMessage}" Classes="status-text" />
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
          <TextBlock Text="Ready" Classes="status-text" />
          <TextBlock Text="Calc: Automatic" Classes="status-text" />
        </StackPanel>
      </Grid>
    </Border>
  </Grid>
</UserControl>
