<UserControl x:Class="DockOverlayReactiveUISample.Views.Documents.OverlayDocumentView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:DockOverlayReactiveUISample.ViewModels.Documents"
             mc:Ignorable="d"
             d:DesignWidth="400" d:DesignHeight="280"
             x:DataType="vm:OverlayDocumentViewModel" x:CompileBindings="True">
  <Border Padding="12" Background="Transparent">
    <StackPanel Spacing="4">
      <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
      <TextBlock Text="{Binding Context}" TextWrapping="Wrap" />
    </StackPanel>
  </Border>
</UserControl>
