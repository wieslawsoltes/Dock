<UserControl x:Class="DockOverlayReactiveUISample.Views.Tools.DashboardActionsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:DockOverlayReactiveUISample.ViewModels.Tools"
             mc:Ignorable="d"
             d:DesignWidth="320" d:DesignHeight="200"
             x:DataType="vm:DashboardActionsViewModel" x:CompileBindings="True">
  <Border Padding="8" Background="Transparent">
    <StackPanel Spacing="8">
      <TextBlock Text="Window actions" FontWeight="SemiBold" />
      <TextBlock Text="Float the activity panel into a window or restore it back."
                 TextWrapping="Wrap"
                 FontSize="12"
                 Opacity="0.8" />
      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button Content="Float panel" Command="{Binding FloatPanelCommand}" />
        <Button Content="Restore panel" Command="{Binding RestorePanelCommand}" />
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>
