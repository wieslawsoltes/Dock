<UserControl x:Class="DockReactiveUIRoutingSample.Views.Documents.DocumentHomeView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DockReactiveUIRoutingSample.ViewModels.Documents"
             x:CompileBindings="True"
             x:DataType="vm:DocumentHomeViewModel">
    <StackPanel Margin="10" Spacing="10">
        <Button Content="← Back" Command="{Binding GoBack}" HorizontalAlignment="Left" Padding="10,5" Margin="0,0,0,10"/>
        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
        <TextBlock Text="Welcome to the document! Navigate to different sections:" TextWrapping="Wrap"/>
        
        <Border Background="LightCyan" Padding="10" CornerRadius="5">
            <StackPanel Spacing="10">
                <TextBlock Text="Document Navigation:" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Content="📄 View Details" Command="{Binding GoToDetails}" Padding="10,5"/>
                    <Button Content="✏️ Edit Document" Command="{Binding GoToEditor}" Padding="10,5"/>
                </StackPanel>
                <TextBlock Text="Click the buttons above to navigate to different document views." FontStyle="Italic" FontSize="12"/>
            </StackPanel>
        </Border>
        
        <Border Background="LightGray" Padding="10" CornerRadius="5">
            <StackPanel Spacing="5">
                <TextBlock Text="Document Information:" FontWeight="SemiBold"/>
                <TextBlock Text="• This document demonstrates internal navigation"/>
                <TextBlock Text="• Each view has a back button to return here"/>
                <TextBlock Text="• Navigation state is maintained within the document"/>
                <TextBlock Text="• You can edit content and view details"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>