<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="clr-namespace:Avalonia.ReactiveUI;assembly=Avalonia.ReactiveUI"
        xmlns:vm="using:DockReactiveUIRoutingSample.ViewModels"
        x:Class="DockReactiveUIRoutingSample.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel" x:CompileBindings="True"
        Width="800" Height="600"
        Title="Dock ReactiveUI Routing Sample">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Navigation Bar -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <Button Name="BackButton" 
                        Content="← Back" 
                        Command="{Binding Router.NavigateBack}"
                        IsVisible="{Binding CanNavigateBack}"
                        Margin="0,0,10,0" />
                <TextBlock Text="Dock ReactiveUI Routing Sample" 
                          VerticalAlignment="Center" 
                          FontWeight="Bold" />
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <rxui:RoutedViewHost Grid.Row="1" 
                            Router="{Binding Router}" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" />
    </Grid>
</Window>
