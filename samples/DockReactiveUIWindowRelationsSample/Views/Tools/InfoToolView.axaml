<UserControl x:Class="DockReactiveUIWindowRelationsSample.Views.Tools.InfoToolView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:DockReactiveUIWindowRelationsSample.ViewModels.Tools"
             mc:Ignorable="d"
             d:DesignWidth="320" d:DesignHeight="320"
             x:DataType="vm:InfoToolViewModel" x:CompileBindings="True">
  <StackPanel Margin="12" Spacing="6">
    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" />
    <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
  </StackPanel>
</UserControl>
