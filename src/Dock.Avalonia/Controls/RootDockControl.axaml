<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dmc="using:Dock.Model.Controls"
                    xmlns:converters="using:Dock.Avalonia.Converters"
                    x:DataType="dmc:IRootDock"
                    x:CompileBindings="True">
  <Design.PreviewWith>
    <RootDockControl Width="300" Height="300" />
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type RootDockControl}" TargetType="RootDockControl">

    <Setter Property="(DockProperties.IsDragEnabled)" Value="{Binding CanDrag}" />
    <Setter Property="(DockProperties.IsDropEnabled)" Value="{Binding CanDrop}" />

    <Setter Property="Template">
      <ControlTemplate>
        <DockableControl TrackingMode="Visible">
          <DockPanel Background="Transparent"
                     DockProperties.IsDropArea="False">
            <ToolPinnedControl DockPanel.Dock="Left"
                               Orientation="Vertical"
                               Items="{Binding LeftPinnedDockables}"
                               VerticalAlignment="{Binding LeftPinnedDockablesAlignment, Converter={x:Static converters:AlignmentToVerticalAlignmentConverter.Instance}}"
                               IsVisible="{Binding !!LeftPinnedDockables.Count, FallbackValue={x:False}}" />
            <ToolPinnedControl DockPanel.Dock="Right"
                               Orientation="Vertical"
                               Items="{Binding RightPinnedDockables}"
                               VerticalAlignment="{Binding RightPinnedDockablesAlignment, Converter={x:Static converters:AlignmentToVerticalAlignmentConverter.Instance}}"
                               IsVisible="{Binding !!RightPinnedDockables.Count, FallbackValue={x:False}}" />
            <ToolPinnedControl DockPanel.Dock="Top"
                               Orientation="Horizontal"
                               Items="{Binding TopPinnedDockables}"
                               HorizontalAlignment="{Binding TopPinnedDockablesAlignment, Converter={x:Static converters:AlignmentToHorizontalAlignmentConverter.Instance}}"
                               IsVisible="{Binding !!TopPinnedDockables.Count, FallbackValue={x:False}}" />
            <ToolPinnedControl DockPanel.Dock="Bottom"
                               Orientation="Horizontal"
                               Items="{Binding BottomPinnedDockables}"
                               HorizontalAlignment="{Binding BottomPinnedDockablesAlignment, Converter={x:Static converters:AlignmentToHorizontalAlignmentConverter.Instance}}"
                               IsVisible="{Binding !!BottomPinnedDockables.Count, FallbackValue={x:False}}" />
            <Panel>
              <ContentControl Content="{Binding ActiveDockable}" Name="PART_MainContent" />
              <PinnedDockControl
                  LeftPinnedDockablesAlignment="{Binding LeftPinnedDockablesAlignment}"
                  RightPinnedDockablesAlignment="{Binding RightPinnedDockablesAlignment}"
                  TopPinnedDockablesAlignment="{Binding TopPinnedDockablesAlignment}"
                  BottomPinnedDockablesAlignment="{Binding BottomPinnedDockablesAlignment}" />
            </Panel>
          </DockPanel>
        </DockableControl>
      </ControlTemplate>
    </Setter>

  </ControlTheme>

</ResourceDictionary>
